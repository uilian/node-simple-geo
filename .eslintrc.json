{
    "env": {
        "node": true
    },
    "rules": {
        "quotes": [2, "single"],
        "indent": ["error", 3],
        "no-warning-comments": [1, { "terms": ["todo", "fixme", "wtf"], "location": "anywhere" }],
        "strict": 1,
        "no-process-exit": 2,
        "eqeqeq": 2,
        "no-delete-var": 2,
        "one-var": 0,
        "max-params": [2, 4],
        "no-plusplus": 2,
        "semi": [2, "always"],
        "no-mixed-requires": 0,
        "valid-jsdoc": 0
    }
}