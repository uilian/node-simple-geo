{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            3
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-warning-comments": [
            1, { "terms": ["todo", "fixme", "wtf"], "location": "anywhere" }
        ],
        "strict": 1,
        "eqeqeq": 2,
        "no-delete-var": 2,
        "one-var": 0,

        "semi": [
            "error",
            "always"
        ]
    }
}

